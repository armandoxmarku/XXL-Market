@model User
<link rel="stylesheet" href="~/css/register.css">
<div >
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card custom-card">
                <div class="card-body form">
                    <h2 class="text-center">Register</h2>

                    <form asp-action="Register" method="post">

                        <div class="field">
                            <label asp-for="FirstName">First Name:</label>
                            <input asp-for="FirstName" class="input" placeholder="Enter your first name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="field">
                            <label asp-for="LastName">Last Name:</label>
                            <input asp-for="LastName" class="input" placeholder="Enter your last name">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="field">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" type="email" class="input" placeholder="Enter your email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="field">
                            <label asp-for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="input" placeholder="Enter your password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="field">
                            <label asp-for="PasswordConfirm">Confirm Password:</label>
                            <input asp-for="PasswordConfirm" type="password" class="input" placeholder="Confirm your password">
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-custom btn-block">Register</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
