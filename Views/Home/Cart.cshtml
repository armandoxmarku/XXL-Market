@model XXL_Market.Models.Order
    <div>@await Html.PartialAsync("_nav")</div>

<h2>Your Shopping Cart</h2>

@if (Model != null)
{
    <div class="row">
        @foreach (var orderDetail in Model.OrderDetails)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/@orderDetail.Product.PictureUrl" class="card-img-top" alt="Product Image" style="max-height: 100px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@orderDetail.Product.Name</h5>
                        <p class="card-text">@orderDetail.Product.Description</p>
                        <p class="card-text">Quantity: <span id="quantity_@orderDetail.OrderDetailId">@orderDetail.Quantity</span></p>
                        <p class="card-text">Price: $@orderDetail.Product.Price</p>
                        <p class="card-text">Total: $@(orderDetail.Quantity * orderDetail.Product.Price)</p>

                        <!-- Quantity Buttons -->
                        <div class="btn-group" role="group">
                            <form asp-action="DecreaseQuantity" asp-route-id="@orderDetail.OrderDetailId" method="post">
                                <button type="submit" class="btn btn-primary">-</button>
                            </form>
                            <form asp-action="IncreaseQuantity" asp-route-id="@orderDetail.OrderDetailId" method="post">
                                <button type="submit" class="btn btn-primary">+</button>
                            </form>
                        </div>

                        <!-- Remove Button -->
                        <form asp-action="RemoveFromCart" asp-route-id="@orderDetail.OrderDetailId" method="post">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <h4>Total: $@Model.OrderDetails.Sum(od => od.Quantity * od.Product.Price)</h4>
        <a asp-action="Checkout" asp-controller="Home" class="btn btn-primary">Proceed to Checkout</a>
    </div>
}
else
{
    <p>Your cart is empty.</p>
}
